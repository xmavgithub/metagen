# Video CNN encoder fragment.
import torch
import torch.nn as nn


class VideoCNNEncoder(nn.Module):
    def __init__(
        self,
        in_channels: int = {{ blueprint.num_channels or 3 }},
        hidden_size: int = {{ blueprint.dims.hidden_size }},
    ) -> None:
        super().__init__()
        self.conv1 = nn.Conv3d(in_channels, hidden_size // 2, kernel_size=3, padding=1)
        self.conv2 = nn.Conv3d(hidden_size // 2, hidden_size, kernel_size=3, padding=1)
        self.norm = nn.BatchNorm3d(hidden_size)

    def forward(self, x: torch.Tensor) -> torch.Tensor:
        # x: (batch, channels, frames, height, width)
        x = torch.relu(self.conv1(x))
        x = torch.relu(self.conv2(x))
        return self.norm(x)
