# Audio embedding fragment.
import torch
import torch.nn as nn


class AudioEmbedding(nn.Module):
    def __init__(
        self,
        in_channels: int = {{ blueprint.num_channels or 1 }},
        hidden_size: int = {{ blueprint.dims.hidden_size }},
    ) -> None:
        super().__init__()
        self.proj = nn.Conv1d(in_channels, hidden_size, kernel_size=3, padding=1)

    def forward(self, x: torch.Tensor) -> torch.Tensor:
        # x: (batch, channels, time)
        return self.proj(x)
