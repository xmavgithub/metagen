# Ranking head fragment.
import torch
import torch.nn as nn


class RankingHead(nn.Module):
    """Ranking head for learning-to-rank tasks."""

    def __init__(
        self,
        hidden_dim: int = {{ blueprint.dims.hidden_size }},
        dropout: float = 0.1,
    ) -> None:
        super().__init__()
        self.dropout = nn.Dropout(dropout)
        self.fc1 = nn.Linear(hidden_dim, hidden_dim // 2)
        self.fc2 = nn.Linear(hidden_dim // 2, 1)
        self.activation = nn.ReLU()

    def forward(self, x: torch.Tensor) -> torch.Tensor:
        """
        Args:
            x: Hidden states of shape (batch_size, seq_len, hidden_dim)
               or (batch_size, hidden_dim) for pooled representations.

        Returns:
            Relevance scores of shape (batch_size, 1).
        """
        # If sequence, take CLS token
        if x.dim() == 3:
            x = x[:, 0]
        x = self.dropout(x)
        x = self.activation(self.fc1(x))
        return self.fc2(x)
